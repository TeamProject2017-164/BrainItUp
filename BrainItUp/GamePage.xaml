        <TextBox HorizontalAlignment="Center" VerticalAlignment="Center" Height="194" TextWrapping="Wrap" Text="TextBox"  Width="380" Margin="10,10.4,10,10" Grid.Row="2"/>
        <TextBox HorizontalAlignment="Center" VerticalAlignment="Center" Height="194" TextWrapping="Wrap" Text="TextBox"  Width="380" Grid.Column="1" Margin="10,10.4,10,10" Grid.Row="2"/>

    </Grid>
