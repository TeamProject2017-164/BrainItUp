<Page x:Class="BrainItUp.RatingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BrainItUp"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Rating" Loaded="Page_Loaded">

    <Grid>
        <DockPanel LastChildFill="True">
            <StackPanel DockPanel.Dock="Right">
                <GroupBox Header="Rating" FontWeight="Bold">
                    <DataGrid x:Name="_dataGridRating" 
                                IsReadOnly="True"
                                AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="NickName" Binding="{Binding User.NickName}"/>
                            <DataGridTextColumn Header="Ratio" Binding="{Binding Rate}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
                <Button Content="Button" Width="108" Height="69" RenderTransformOrigin="0.5,0.5"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Page>
